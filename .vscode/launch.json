{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/client_vscode/src/debug-adapter/client.ts",
            "args": ["--server=4711"],
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/client_vscode/out/src/**/*.js"]
        }
    ],
}

